{
  "name": "codedocx",
  "displayName": "CodeDocX",
  "description": "AI-powered code documentation and visualization for Java projects.",
  "version": "1.0.3",
  "publisher": "NP",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Visualization"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "icon": "icons/CodeDocIcon.png",
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codedoc.openChat",
        "title": "Open CodeDoc Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "codedoc.clearChat",
        "title": "Clear Chat History",
        "icon": "$(clear-all)"
      },
      {
        "command": "codedoc.visualizeCode",
        "title": "Visualize Code"
      },
      {
        "command": "codedoc.generateDocs",
        "title": "Generate Docs"
      },
      {
        "command": "codedoc.configureExtension",
        "title": "Configure CodeDoc Settings",
        "icon": "$(settings-gear)"
      },
      {
        "command": "codedoc.testSentry",
        "title": "CodeDoc: Test Sentry Integration",
        "icon": "$(bug)"
      }
    ],
    "views": {
      "codedoc-sidebar": [
        {
          "type": "webview",
          "id": "codedoc.mainView",
          "name": "CodeDoc",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codedoc-sidebar",
          "title": "CodeDoc",
          "icon": "./icons/cute-dog-icon-v2.svg"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "CodeDoc Configuration",
      "properties": {
        "codedoc.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key for generating documentation and code analysis",
          "scope": "application"
        },
        "codedoc.openaiModel": {
          "type": "string",
          "default": "gpt-4",
          "description": "OpenAI model to use for code analysis",
          "enum": [
            "gpt-4",
            "gpt-4-turbo",
            "gpt-3.5-turbo",
            "gpt-4o",
            "gpt-4o-mini"
          ],
          "enumDescriptions": [
            "GPT-4 - Most capable model, best for complex analysis",
            "GPT-4 Turbo - Faster GPT-4 with improved efficiency",
            "GPT-3.5 Turbo - Fast and cost-effective for simple tasks",
            "GPT-4o - Latest optimized model with multimodal capabilities",
            "GPT-4o Mini - Compact version of GPT-4o for quick responses"
          ],
          "scope": "application"
        },
        "codedoc.maxTokens": {
          "type": "number",
          "default": 2000,
          "description": "Maximum number of tokens to use in OpenAI responses",
          "minimum": 100,
          "maximum": 4000,
          "scope": "application"
        },
        "codedoc.temperature": {
          "type": "number",
          "default": 0.3,
          "description": "Temperature setting for OpenAI responses (0.0 = deterministic, 1.0 = creative)",
          "minimum": 0,
          "maximum": 1,
          "scope": "application"
        },
        "codedoc.enableTelemetry": {
          "type": "boolean",
          "default": true,
          "description": "Enable telemetry and error reporting to help improve the extension. No personal data or code content is collected.",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "echo \"Tests require VS Code environment - skipping in CI\" && exit 0",
    "test:integration": "node ./out/test/runTest.js",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "package": "vsce package",
    "publish": "vsce publish",
    "version:patch": "npm version patch && git push && git push --tags",
    "version:minor": "npm version minor && git push && git push --tags",
    "version:major": "npm version major && git push && git push --tags"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.0.0",
    "glob": "^8.0.0",
    "mocha": "^10.0.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@langchain/openai": "^0.3.0",
    "@sentry/node": "^10.20.0",
    "@sentry/tracing": "^7.120.4",
    "langchain": "^0.3.0",
    "marked": "^16.2.1",
    "openai": "^5.19.1",
    "puppeteer": "^24.22.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shaoxian04/CodeDoc"
  },
  "bugs": {
    "url": "https://github.com/shaoxian04/CodeDoc"
  },
  "homepage": "https://github.com/shaoxian04/CodeDoc"
}
