{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2022",
        "outDir": "out",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "types": [],
        "noImplicitAny": false
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}